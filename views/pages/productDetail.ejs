<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  <%- include('../partials/link') %>
    <link rel="stylesheet" href="/css/detailPage.css" />

</head>

<body>
  <%- include('../partials/header') %>


    <section class="product-detail">

      <!-- PRODUCT CAROUSEL -->
      <div class="product-media">
        <div class="carousel">

          <div class="carousel-track">

            <div class="carousel-slide">
              <img src="/assets/product.png" alt="<%= product.name %>">
            </div>

            <div class="carousel-slide">
              <img src="/assets/product.png" alt="<%= product.name %>">
            </div>

            <div class="carousel-slide">
              <img src="/assets/product.png" alt="<%= product.name %>">
            </div>

          </div>


          <div class="carousel-dots">
            <span class="dot active"></span>
            <span class="dot"></span>
            <span class="dot"></span>
          </div>

        </div>
      </div>

      <!-- PRODUCT INFO -->
      <div class="product-info">
        <h1 class="product-title">
          <%= product.name %> - <%= product.weight %>
        </h1>

        <% if (product.discount> 0) { %>
          <p class="mrp">₹<%= product.mrp %>
          </p>
          <% } %>

            <div class="price-row">
              <span class="price">₹<%= product.price %></span>
              <% if (product.discount> 0) { %>
                <span class="discount">
                  <%= product.discount %>% OFF
                </span>
                <% } %>
            </div>

            <p class="product-desc">
              Pure raw forest honey sourced naturally, unprocessed and rich in nutrients.
            </p>

      </div>
    </section>

    <!-- FIXED CTA -->
    <div class="product-cta">
      <form id="lower-btn" action="/cart/add" method="POST">
        <input type="hidden" name="productId" value="<%= product._id %>">
        <button id="buy-btn" type="submit">Buy Now</button>
        <button type="submit">Add to Cart</button>
      </form>
    </div>



    <%- include('../partials/burgerMenu') %>
    <%- include('../partials/flashModal') %>
      <script src="/javascript/header.js"></script>
      <script src="/javascript/slider.js"></script>

</body>

</html>