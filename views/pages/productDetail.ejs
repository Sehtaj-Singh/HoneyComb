<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <!-- Font Awesome kit -->
  <link rel="stylesheet" href="/icons/css/fontawesome.min.css">
  <link rel="stylesheet" href="/icons/css/solid.min.css">
  <link rel="stylesheet" href="/icons/css/brands.min.css">


  <!-- CSS -->
   <link rel="stylesheet" href="/css/header.css" />
</head>
<body>
  <%- include('../partials/header') %>

  

<section class="product-detail">

  <img src="/assets/honey.webp" alt="<%= product.name %>">

  <h1><%= product.name %></h1>
  <p><%= product.weight %></p>

  <% if (product.discount > 0) { %>
    <p class="mrp">₹<%= product.mrp %></p>
  <% } %>

  <p class="price">₹<%= product.price %></p>

  <% if (product.discount > 0) { %>
    <span class="discount"><%= product.discount %>% OFF</span>
  <% } %>

  <button>Add to Cart</button>

</section>


<%- include('../partials/burgerMenu') %>



