<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  <%- include('../partials/link') %>
    <link rel="stylesheet" href="/css/order.css" />
    <link rel="stylesheet" href="/css/cart.css" />

</head>

<body>
  <%- include('../partials/header') %>

    <% if (!isLoggedIn) { %>

      <!-- STATE 1: NOT LOGGED IN -->
      <section class="empty-state cart-guest">
        <div class="empty-state__visual">
          <img src="assets/login.jpg" alt="Login required">
        </div>

        <div class="empty-state__content">
          <h2>You are not logged in</h2>
          <p>Please login to see your cart.</p>

          <div class="empty-state__actions">
            <a href="/login">Login</a>
            <a href="/register">Register</a>
          </div>
        </div>
      </section>

      <% } else if (!hasItems) { %>

        <!-- STATE 2: LOGGED IN, EMPTY CART -->
        <section class="empty-state cart-empty">
          <div class="empty-state__visual">
            <img src="assets/cart.jpg" alt="Empty cart">
          </div>

          <div class="empty-state__content">
            <h2>Your cart is empty</h2>
            <p>Add items to your cart to continue shopping.</p>

            <div class="empty-state__actions">
              <a href="/store">Shop Now</a>
            </div>
          </div>
        </section>

        <% } else { %>

          <!-- STATE 3: LOGGED IN, CART HAS ITEMS -->
          <section class="cart-page">

            <!-- DELIVERY ADDRESS (only if exists) -->
            <% if (hasAddress && address) { %>
              <div class="cart-address">
                <div class="cart-address-icon">
                  <i class="fa-solid fa-location-dot"></i>
                </div>


                <div class="cart-address-content">
                  <strong>
                    <%= address.fullName %>
                  </strong>
                  <p>
                    <%= address.flat %>, <%= address.area %>,
                        <%= address.city %>, <%= address.state %> - <%= address.pincode %>
                  </p>
                </div>

                <button type="button" class="change-address-btn" onclick='openAddressModalFromBtn(this)'
                  data-address='<%- JSON.stringify(address) %>'>
                  Change
                </button>
              </div>
              <% } %>

                <h2 id="cart-title">YOUR CART</h2>

                <div class="cart-layout">

                  <!-- LEFT : CART ITEMS -->
                  <div class="cart-items">




                    <% cart.forEach(item=> { %>

                      <div class="cart-item">

                        <!-- IMAGE + QTY -->
                        <div class="cart-item-media">
                          <div class="cart-item-image">
                            <img src="/assets/product.png">
                          </div>

                          <div class="cart-qty">

                            <form action="/cart/decrease" method="POST">
                              <input type="hidden" name="productId" value="<%= item.productId %>">
                              <button type="submit">−</button>
                            </form>

                            <span>
                              <%= item.quantity %>
                            </span>

                            <form action="/cart/increase" method="POST">
                              <input type="hidden" name="productId" value="<%= item.productId %>">
                              <button type="submit">+</button>
                            </form>

                          </div>

                        </div>

                        <!-- DATA -->
                        <div class="cart-item-data">
                          <p class="cart-item-name">
                            <%= item.name %>
                          </p>
                          <p class="cart-item-weight">
                            <%= item.weight %>
                          </p>
                          <p class="cart-item-price">₹<%= item.price %>
                          </p>

                          <form action="/cart/remove" method="POST">
                            <input type="hidden" name="productId" value="<%= item.productId %>">
                            <button class="remove-btn" type="submit">Remove</button>
                          </form>
                        </div>

                      </div>

                      <% }) %>

                  </div>

                  <!-- RIGHT : SUMMARY -->
                  <div class="cart-summary">
                    <h3>Price Details</h3>

                    <div class="summary-row">
                      <span>Total MRP</span>
                      <span>₹<%= summary.totalMrp %></span>
                    </div>

                    <div class="summary-row">
                      <span>Discount</span>
                      <span>- ₹<%= summary.discount %></span>
                    </div>

                    <div class="summary-row total">
                      <span>Total Amount</span>
                      <span>₹<%= summary.totalPrice %></span>
                    </div>
                  </div>


                </div>

          </section>

          <!-- CART ACTION BAR -->
          <div class="cart-action-bar">

            <!-- PRICE -->
            <div class="cart-action-price">
              <span>Total</span>
              <strong>₹<%= summary.totalPrice %></strong>
            </div>

            <!-- ACTION -->
            <div class="cart-action-btn">

              <% if (hasAddress) { %>
                <button class="checkout-btn" onclick="startCheckout()">
                  Checkout
                </button>
                <% } else { %>
                  <button class="checkout-btn" onclick="openAddressModal()">
                    Add Address
                  </button>
                  <% } %>

            </div>

          </div>




          <% } %>

            <%- include('../partials/burgerMenu') %>
              <%- include('../partials/addressModal') %>
                <%- include('../partials/flashModal') %>
                  <script src="/javascript/header.js"></script>
                  <script src="/javascript/checkout.js"></script>
                  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

</body>

</html>