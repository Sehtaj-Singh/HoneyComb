<header class="site-header">
  <div class="header-inner">

    <!-- Left: Brand -->
    <div class="header-left">
      <a href="/" class="brand-name">honeycomb</a>
    </div>

    <!-- Right: Icons -->
    <div class="header-right">

      <!-- Search Button -->
      <button class="icon-btn" id="searchBtn" aria-label="Search">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>

      <!-- Cart Button -->
      <a href="/cart" class="icon-btn" aria-label="Cart">
        <i class="fa-solid fa-cart-shopping"></i>
      </a>

      <!-- Menu Button -->
      <button class="icon-btn" id="menuBtn" aria-label="Menu">
        <i class="fa-solid fa-bars"></i>
      </button>

    </div>
  </div>
</header>



<!-- SEARCH PANEL -->
<div class="search-panel" id="searchPanel">
  <div class="search-inner">
    <input
      type="text"
      placeholder="Search honey, products..."
      aria-label="Search"
    />
    <button class="search-close" id="searchClose">
      <i class="fa-solid fa-xmark"></i>
    </button>
  </div>
</div>

<!-- SIDE MENU MODAL -->
<div class="side-menu" id="sideMenu">
  <div class="side-menu-inner">

    <button class="close-btn" aria-label="Close menu">
      <i class="fa-solid fa-xmark"></i>
    </button>

    <nav class="side-nav">
      <a href="/">Home</a>
      <a href="/products">Products</a>
      <a href="/gallery">Gallery</a>
      <a href="/process">Our Process</a>

      <% if (!locals.user) { %>
        <a href="/login">Login</a>
      <% } else { %>
        <a href="/account">My Account</a>
        <a href="/logout">Logout</a>
      <% } %>
    </nav>

  </div>
</div>

<!-- BOTTOM NAV -->
<div id="lowerHeader">

  <a href="/" class="nav-item <%= active === 'home' ? 'active' : '' %>">
    <i class="fa-solid fa-house"></i>
    <span>Home</span>
  </a>

  <a href="/store" class="nav-item <%= active === 'store' ? 'active' : '' %>">
    <i class="fa-solid fa-store"></i>
    <span>Store</span>
  </a>

  <a href="/orders" class="nav-item <%= active === 'orders' ? 'active' : '' %>">
    <i class="fa-solid fa-box"></i>
    <span>Orders</span>
  </a>


  <a href="/profile" class="nav-item <%= active === 'profile' ? 'active' : '' %>">
    <i class="fa-solid fa-user"></i>
    <span>Profile</span>
  </a>

</div>
